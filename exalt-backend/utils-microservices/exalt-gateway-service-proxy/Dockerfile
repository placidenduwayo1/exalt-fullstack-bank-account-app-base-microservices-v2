FROM maven:3.9.8-eclipse-temurin-21-alpine AS builder
ARG APPLICATION_NAME3
ARG SERVER_PORT3
ARG CONFIGURATION_SERVER_HOST
ARG CONFIGURATION_SERVER_PORT
ARG GATEWAY_ROUTE_ID1
ARG GATEWAY_ROUTE_URI1
ARG GATEWAY_ROUTE_ID2
ARG GATEWAY_ROUTE_URI2
ARG GATEWAY_ROUTE_ID3
ARG GATEWAY_ROUTE_URI3
ARG GATEWAY_ROUTE_ID4
ARG GATEWAY_ROUTE_URI4

ENV APPLICATION_NAME3=${APPLICATION_NAME3}
ENV SERVER_PORT3=${SERVER_PORT3}
ENV CONFIGURATION_SERVER_HOST=${CONFIGURATION_SERVER_HOST}
ENV CONFIGURATION_SERVER_PORT=${CONFIGURATION_SERVER_PORT}
ENV GATEWAY_ROUTE_ID1=${GATEWAY_ROUTE_ID1}
ENV GATEWAY_ROUTE_URI1=${GATEWAY_ROUTE_URI1}
ENV GATEWAY_ROUTE_ID2=${GATEWAY_ROUTE_ID2}
ENV GATEWAY_ROUTE_URI2=${GATEWAY_ROUTE_URI2}
ENV GATEWAY_ROUTE_ID3=${GATEWAY_ROUTE_ID3}
ENV GATEWAY_ROUTE_URI3=${GATEWAY_ROUTE_URI3}
ENV GATEWAY_ROUTE_ID4=${GATEWAY_ROUTE_ID4}
ENV GATEWAY_ROUTE_URI4=${GATEWAY_ROUTE_URI4}

WORKDIR /build/
COPY pom.xml /build/
COPY src /build/src
RUN mvn package -DskipTest
WORKDIR /build/target/
RUN java -Djarmode=layertools -jar exalt-gateway-service-proxy.jar extract

FROM maven:3.9.8-eclipse-temurin-21-alpine AS final
COPY --from=builder /build/target/dependencies/ ./
COPY --from=builder /build/target/spring-boot-loader/ ./
COPY --from=builder /build/target/snapshot-dependencies/ ./
COPY --from=builder /build/target/application/ ./

EXPOSE ${SERVER_PORT3}
ENTRYPOINT ["java", "org.springframework.boot.loader.launch.JarLauncher"]
