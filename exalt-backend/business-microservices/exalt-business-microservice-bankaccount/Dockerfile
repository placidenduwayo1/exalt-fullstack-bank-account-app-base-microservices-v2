FROM maven:3.9.8-eclipse-temurin-21-alpine AS builder
ARG APPLICATION_NAME5
ARG CONFIGURATION_SERVER_HOST
ARG CONFIGURATION_SERVER_PORT
ARG DATABASE_HOSTNAME
ARG DATABASE_PORT
ARG DATABASE_NAME2
ARG DATABASE_USERNAME
ARG DATABASE_PASSWORD
ARG KAFKA_BROKER_HOST1
ARG KAFKA_BROKER_PORT1
ARG KAFKA_BROKER_HOST2
ARG KAFKA_BROKER_PORT2
ARG KAFKA_KEY_SERIALIZER
ARG KAFKA_VALUE_SERIALIZER
ARG KAFKA_KEY_DESERIALIZER
ARG KAFKA_VALUE_DESERIALIZER
ARG SCHEMA_REGISTRY_SERVER_HOST
ARG SCHEMA_REGISTRY_SERVER_PORT
ARG KAFKA_APPLICATION_TOPIC_NAME000
ARG KAFKA_APPLICATION_TOPIC_NAME001
ARG KAFKA_APPLICATION_TOPIC_RETENTION
ARG SERVICES_REGISTRY_SERVER_HOST
ARG SERVICES_REGISTRY_SERVER_PORT

ENV APPLICATION_NAME5=${APPLICATION_NAME5}
ENV CONFIGURATION_SERVER_HOST=${CONFIGURATION_SERVER_HOST}
ENV CONFIGURATION_SERVER_PORT=${CONFIGURATION_SERVER_PORT}
ENV DATABASE_HOSTNAME=${DATABASE_HOSTNAME}
ENV DATABASE_PORT=${DATABASE_PORT}
ENV DATABASE_NAME2=${DATABASE_NAME2}
ENV DATABASE_USERNAME=${DATABASE_USERNAME}
ENV DATABASE_PASSWORD=${DATABASE_PASSWORD}
ENV KAFKA_BROKER_HOST1=${KAFKA_BROKER_HOST1}
ENV KAFKA_BROKER_PORT1=${KAFKA_BROKER_PORT1}
ENV KAFKA_BROKER_HOST2=${KAFKA_BROKER_HOST2}
ENV KAFKA_BROKER_PORT2=${KAFKA_BROKER_PORT2}
ENV KAFKA_KEY_SERIALIZER=${KAFKA_KEY_SERIALIZER}
ENV KAFKA_VALUE_SERIALIZER=${KAFKA_VALUE_SERIALIZER}
ENV KAFKA_KEY_DESERIALIZER=${KAFKA_KEY_DESERIALIZER}
ENV KAFKA_VALUE_DESERIALIZER=${KAFKA_VALUE_DESERIALIZER}
ENV SCHEMA_REGISTRY_SERVER_HOST=${SCHEMA_REGISTRY_SERVER_HOST}
ENV SCHEMA_REGISTRY_SERVER_PORT=${SCHEMA_REGISTRY_SERVER_PORT}
ENV KAFKA_APPLICATION_TOPIC_NAME000=${KAFKA_APPLICATION_TOPIC_NAME000}
ENV KAFKA_APPLICATION_TOPIC_NAME001=${KAFKA_APPLICATION_TOPIC_NAME001}
ENV KAFKA_APPLICATION_TOPIC_RETENTION=${KAFKA_APPLICATION_TOPIC_RETENTION}
ENV SERVICES_REGISTRY_SERVER_HOST=${SERVICES_REGISTRY_SERVER_HOST}
ENV SERVICES_REGISTRY_SERVER_PORT=${SERVICES_REGISTRY_SERVER_PORT}

WORKDIR /build/
COPY pom.xml /build/
COPY src /build/src
RUN mvn package -DskipTest
WORKDIR /build/target/
RUN java -Djarmode=layertools -jar exalt-business-microservice-bank-account.jar extract

FROM maven:3.9.8-eclipse-temurin-21-alpine AS final
COPY --from=builder /build/target/dependencies/ ./
COPY --from=builder /build/target/spring-boot-loader/ ./
COPY --from=builder /build/target/snapshot-dependencies/ ./
COPY --from=builder /build/target/application/ ./

EXPOSE 8104
ENTRYPOINT ["java", "org.springframework.boot.loader.launch.JarLauncher"]
